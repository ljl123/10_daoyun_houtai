{
    "appenders": {
        "console": {
            "type": "console"
        },
        "log_file": {
            "type": "file",
            "filename": "./logs/log_file/file.log",
            "maxLogSize": 104800
        },
        "log_date": {
            "type": "file",
            "filename": "./logs/log_date/date",
            "alwaysIncludePattern": true,
            "pattern": "-yyyy-MM-dd.log"
        },
        "err_log": {
            "type": "file",
            "filename": "./logs/log_date/err_log/",
            "alwaysIncludePattern": true,
            "pattern": "error-yyyy-MM-dd.log"
        }
    },
    "categories": {
        "err": {
            "appenders": [
                "err_log"
            ],
            "level": "error"
        },
        "file": {
            "appenders": [
                "log_file"
            ],
            "level": "info"
        },
        "file_date": {
            "appenders": [
                "log_date"
            ],
            "level": "info"
        },
        "another": {
            "appenders": [
                "console"
            ],
            "level": "info"
        },
        "default": {
            "appenders": [
                "console",
                "log_date",
                "log_file"
            ],
            "level": "info"
        }
    },
    "replaceConsole": false
}